{
  "metadata": [
    {
      "src": [{"src": "../Runtime", "files": ["**/*.cs"]}],
      "dest": "api",
      "allowCompilationErrors": true,
      "memberLayout": "separatePages",
      "enumSortOrder": "declaringOrder",
      "references": "dlls/*",
      "properties": { "DefineConstants": "UNITY_MATHEMATICS_FIXEDPOINT" }
    }
  ],
  "build": {
    "xref":[
      "https://learn.microsoft.com/en-us/dotnet/.xrefmap.json",
      "unity-xrefmap.yml"
    ],
    "markdownEngineName": "markdig",
    "markdownEngineProperties": {
      "markdigExtensions": [ "footnotes" ]
    },
    "content": [
      {"files": ["*.md", "toc.yml"]},
      {"src": "manual", "files": ["*.yml", "*.md", "**/*.md"], "dest": "manual"},
      {"src": "api", "files": ["*.yml", "index.md", "andywiecko.md"], "dest": "api"},
      {"src": "changelog", "files": ["toc.yml", "CHANGELOG.md"], "dest": "changelog"},
      {"src": "license", "files": ["toc.yml", "LICENSE.md"], "dest": "license"}
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": ["default", "override"],
    "globalMetadata": {
      "_appName": "BurstTriangulator",
      "_appTitle": "BurstTriangulator",
      "_enableSearch": true,
      "pdf": false,
      "_disableContribution": true,
      "_appLogoPath": "images/logo.svg",
      "_appFaviconPath": "images/favicon.ico"
    }
  }
}